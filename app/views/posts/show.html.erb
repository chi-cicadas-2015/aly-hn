<h3 id="title"><%= @post.title %></h3>
<p id="body"><%= @post.body %></p>

<h4>Comments</h4>
<ul>
  <% @comments.each do |comment| %>
  <li><%= comment.text %></li>
  <% end %>
</ul>

<h4>Tags</h4>
<ul id="tags">
  <% @post.tags.each do |tag| %>
  <li><%= tag.text %></li>
  <% end %>
</ul>

<% if authenticated? %>
<%= link_to "Add Comment", new_post_comment_path(@post) %>
<% end %>

<% if owner?(@post) %>
<%= link_to "Edit Post", edit_post_path(@post), id: "edit_post" %>
<% end %>

<div id="edit_post_form"></div>